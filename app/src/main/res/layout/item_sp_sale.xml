<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/item_sale"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="3dp">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_rate_sale"
                android:textColor="@color/violet"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_sale"
                android:paddingHorizontal="3dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_price_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout1"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:textColor="@color/violet"
            android:textSize="15dp" />

        <ProgressBar
            android:progressTint="@color/black_violet"
            android:progress="0"
            android:id="@+id/progress_sell"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_price_sale"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:layout_below="@id/tv_price_sale"
            android:layout_width="match_parent"
            android:layout_height="18dp">

            <ImageView
                android:id="@+id/img_flame"
                android:src="@drawable/ic_flame"
                android:layout_width="17dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/status_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </LinearLayout>


    </RelativeLayout>
</layout>